<body>
    <section style="background:linear-gradient(90.08deg, #d1eff5 37.62%, #0f7985 84.8%);">
        <div class="container">
            <div class="row" style="justify-content: center!important; align-items: center;  padding: 40px 60px ;">
                <div class=" col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row">
                            <div class="col-md-6 col-lg-6 d-none d-md-block">
                                <img src="https://content.jdmagicbox.com/comp/gwalior/y5/9999px751.x751.140507190034.a4y5/catalogue/itm-university-gwalior-ho-gwalior-institutes-x3shnd8w7o.jpg"
                                    height="522px" class="w-100 " style="object-fit: cover; border-radius: 1rem 0 0 1rem;">
                            </div>

                            <div class="col-md-6 col-lg-6">
                                <div class="card-body p-4 text-black">
                                    <div class="d-flex pb-1 text-center" >
                                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT6hwo0r89fTqbLgMSapt80g37wHIuVUMJIEoV0ebM&s" style="margin:auto">
                                    </div>

                                    <h4 class="text-center mt-3">Login</h4>
                                    
                                    <% if(msg2.length>0){ %>
                                        <div class="alert alert-primary">
                                            <%= msg2 %>
                                        </div>
                                        <% }%>




                                    <form class=" pt-4" action="/verify_login" method="post">
                                        <div class="form-group mb-4">
                                          <input type="text" placeholder="Email" name="email" class="form-control form-control-lg border-line" >
                                        </div>
                                        <div class="form-group mb-5">
                                            <input type="password" placeholder="Password" name="password" class="form-control form-control-lg border-line">
                                        </div>
                                        <div class="form-group text-center">
                                            <button  type="submit" class="btn btn-lg btn-block " style="background: #0f7985; color:#ffff; width: 100%"> Login</button>
                                        </div>
                                        <div class="pt-4 text-center">
                                            <span class="mb-5 pb-lg-2">DON'T HAVE AN ACCOUNT? </span>
                                            <a href="/Registration" style="color: #0a429c;">REGISTER NOW</a> 
                                        </div>
                                    </form> 
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div><!--row end-->
        </div><!--container end-->
    </section><!--section end-->
    

