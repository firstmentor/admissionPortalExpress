<%- include('./header.ejs') %>

    <h2>Course Edit</h2>
    <div class="container">
        <form action="/course_update/<%= d._id %>" method="post">
            <div class="mb-3">
              <label>Name:</label>
              <input type="text" name="name" value="<%= d.name %>" class="form-control" >
            </div>
            <div class="mb-3">
              <label>Email:</label>
              <input type="email" name="email" value="<%= d.email %>" class="form-control" >
            </div>
            <div class="mb-3">
              <label>Phone:</label>
              <input type="number" name="phone" value="<%= d.phone %>" class="form-control" >
            </div>
            <div class="mb-3">
              <label>City:</label>
              <input type="text" name="city" value="<%= d.city %>" class="form-control" >
            </div>
            <div class="mb-3">
              <label>Address:</label>
              <input type="text" name="address" value=" <%= d.address %> " class="form-control" >
            </div>
            <div class="mb-3">
              <label>Course:</label>
              <input type="text" name="course" value="btech" class="form-control" >
            </div>
            <button class="btn btn-info" type="submit">Update</button>
            </form>

    </div>
    <%- include('./footer.ejs') %>